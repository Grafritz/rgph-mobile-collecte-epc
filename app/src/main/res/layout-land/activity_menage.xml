<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ht.ihsi.rgph.mobile.views.activity.MenageActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme_primary"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:orientation="horizontal"
            android:background="@color/rgph_gray"
            style="@style/StyleLayoutLandScape"
            android:layout_marginBottom="5dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_shadow">

                <Button
                    android:id="@+id/btn_AjouteMenage"
                    style="@style/DashboardButton"
                    android:drawableTop="@drawable/building"
                    android:text="@string/label_ajoute_menage"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_shadow">

                <Button
                    android:id="@+id/btn_menage_ki_pa_fini"
                    style="@style/DashboardButton"
                    android:drawableTop="@drawable/folder_white_home"
                    android:text="@string/label_menaj_ki_pa_fini"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border_shadow">

                <Button
                    android:id="@+id/btn_menage_ki_mal_ranpli"
                    style="@style/DashboardButton"
                    android:drawableTop="@drawable/folder_yellow_home"
                    android:text="@string/label_menaj_ki_mal_ranpli"
                    android:layout_weight="1"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btn_menage_ki_fini"
        android:text="@string/label_menaj_ki_fini"
        style="@style/DashboardTextView"
        />

</LinearLayout>
