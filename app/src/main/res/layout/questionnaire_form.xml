<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RL_Questionnaire"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        >
    <LinearLayout
        android:id="@+id/LinearLayoutContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rgph_gray"
        android:layout_marginTop="0dp"
        >
        <!--android:layout_below="@+id/my_toolbar"-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:layout_margin="0dp"
            android:background="@drawable/border_shadow">


            <TextView
                android:id="@+id/header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.0"
                android:text="AJOUTE YON NOUVO BATIMAN"
                android:textColor="@color/theme_primary"
                android:textSize="22dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:shadowColor="#fff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="0.0"
                android:text="00111-10-123-90 "
                android:textColor="@color/bootstrap_brand_danger"
                android:textSize="20dp"
                android:gravity="right"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border_shadow">

            <TextView
                android:id="@+id/tv_grandtitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bootstrap_edittext_disabled"
                android:textSize="22dp"
                android:text="GRAND TITRE"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/bootstrap_gray"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_DetailsCategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bootstrap_gray_lightest"
                android:textSize="20dp"
                android:text="Details Categorie"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/tv_SousDetailsCategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textSize="19dp"
                android:text="Sous Details Categorie"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border_shadow">

            <TextView
                android:id="@+id/tv_LibeleQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="LIBELE QUESTION"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_DetailQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAILS QUESTION"
                android:textSize="22dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/bootstrap_brand_danger"
                />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/et_Reponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:singleLine="true"
                android:imeActionId="@+id/imeActionId_EtReponse"
                android:imeActionLabel="@string/label_QuestionSuivante"
                android:imeOptions="actionUnspecified"
                android:layout_marginTop="12dp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                />

            <RelativeLayout
                android:id="@+id/RelativeLayout_Reponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_shape"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >
                <Spinner
                    android:id="@+id/sp_Reponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:prompt="@string/label_Chwazi_yon_Repons"
                    android:imeActionId="@+id/imeActionId_EtReponse"
                    android:imeActionLabel="@string/label_QuestionSuivante"
                    android:imeOptions="actionUnspecified"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:textSize="22dp"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_drop" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_Commune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Komin:"
                android:textSize="14dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/RelativeLayout_Reponse2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_shape"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >
                <Spinner
                    android:id="@+id/sp_Reponse2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:prompt="@string/label_Chwazi_yon_Repons"
                    android:imeActionId="@+id/imeActionId_EtReponse"
                    android:imeActionLabel="@string/label_QuestionSuivante"
                    android:imeOptions="actionUnspecified"
                    android:spinnerMode="dialog"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_drop" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_SectionCommune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seksyon Kominal:"
                android:textSize="14dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:id="@+id/RelativeLayout_Reponse3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_shape"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >
                <Spinner
                    android:id="@+id/sp_Reponse3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:prompt="@string/label_Chwazi_yon_Repons"
                    android:imeActionId="@+id/imeActionId_EtReponse"
                    android:imeActionLabel="@string/label_QuestionSuivante"
                    android:spinnerMode="dialog"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_drop" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/LinearLDate"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                >
                <RelativeLayout
                    android:id="@+id/RL_Jour"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:visibility="gone"
                    >
                    <Spinner
                        android:id="@+id/sp_Jour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:prompt="@string/label_Chwazi_yon_Mois"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/my_drop" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >
                    <Spinner
                        android:id="@+id/sp_Mois"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:prompt="@string/label_Chwazi_yon_Mois"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/my_drop" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_shape"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <Spinner
                        android:id="@+id/sp_Annee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:prompt="@string/label_Chwazi_yon_Annee"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/my_drop" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingBottom="10dp"
                android:layout_below="@id/LinearLayoutContent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColorHighlight="@color/rgph_custom_gray_highLight"
                >
                <Button
                    android:id="@+id/btn_Precedent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_QuestionPrecedente"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_selector_gris"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:shadowColor="#000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1.0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="serif"

                    />

                <Button
                    android:id="@+id/btn_Suivant"
                    android:layout_height="wrap_content"
                    android:text="@string/label_QuestionSuivante"
                    android:layout_alignParentRight="true"
                    android:background="@color/theme_primary"
                    android:paddingLeft="20dp"
                    android:layout_margin="5dp"
                    android:paddingRight="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="22dp"
                    android:shadowColor="#000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1.0"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:clickable="true"

                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>
